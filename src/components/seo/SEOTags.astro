---
import { SEO } from 'astro-seo'
import { SITE_URL } from '@/data/config'
import type { HeadTags } from '@/utils/types/HeadTags'

type Props = HeadTags

const { title, description, noindex, og } = Astro.props

const DEFAULT_TITLE_PAGE = '研之有物 - 首页'
const DEFAULT_DESCRIPTION_PAGE = '研之有物 - 前端技术博客'
const DEFAULT_URL_SITE = SITE_URL

// 动态构建当前页面 URL
const currentUrl = `${DEFAULT_URL_SITE}${Astro.url.pathname.replace(/^\//, '')}`

const openGraph = {
  title: title || og?.title || DEFAULT_TITLE_PAGE,
  type: og?.type || 'website',
  image: og?.image
    ? og.image.startsWith('http')
      ? og.image
      : `${DEFAULT_URL_SITE}${og.image}`
    : `${DEFAULT_URL_SITE}opengraph-image.webp`,
  alt: og?.alt || '研之有物',
  url: currentUrl,
  description: og?.description || DEFAULT_DESCRIPTION_PAGE,
}
---

<head>
  <SEO
    charset='UTF-8'
    title={title || DEFAULT_TITLE_PAGE}
    description={description || DEFAULT_DESCRIPTION_PAGE}
    noindex={noindex || false}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
        url: openGraph.url,
      },
      optional: {
        description: openGraph.description,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      creator: '@langliu1216',
    }}
    extend={{
      link: [
        { rel: 'icon', href: '/favicon.ico' },
        { rel: 'sitemap', href: '/sitemap-index.xml' },
        { rel: 'preconnect', href: 'https://www.googletagmanager.com' },
      ],
      meta: [
        { name: 'viewport', content: 'width=device-width, initial-scale=1' },
        { name: 'generator', content: Astro.generator },
        {
          name: 'twitter:image',
          content: openGraph.image,
        },
        { name: 'twitter:card', content: 'summary_large_image' },
        { name: 'twitter:title', content: openGraph.title },
        { name: 'twitter:description', content: openGraph.description },
        { name: 'twitter:site', content: '@langliu1216' },
      ],
    }}
  />
  <!-- Google Tag Manager -->
  <script is:inline>
    ;(function (w, d, s, l, i) {
      w[l] = w[l] || []
      w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
      var f = d.getElementsByTagName(s)[0],
        j = d.createElement(s),
        dl = l != 'dataLayer' ? '&l=' + l : ''
      j.async = true
      j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
      f.parentNode.insertBefore(j, f)
    })(window, document, 'script', 'dataLayer', 'GTM-PHSGPZQH')
  </script>
  <!-- End Google Tag Manager -->
</head>
